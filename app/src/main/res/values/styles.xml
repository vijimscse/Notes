<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/darker_gray</item>
    </style>

    <style name="note_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="note_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingExtra">@dimen/desc_line_spacing</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>


    <style name="editTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:background">@drawable/text_box</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingExtra">@dimen/desc_line_spacing</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="editDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:inputType">textAutoComplete|textMultiLine</item>
        <item name="android:maxLines">4</item>
        <item name="android:background">@drawable/text_box</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/big_padding</item>
        <item name="android:layout_marginBottom">@dimen/big_padding</item>
        <item name="android:lineSpacingExtra">@dimen/desc_line_spacing</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>
</resources>
